<div class="main-container">
  <div class="container py-4">
      <div class="el-card is-never-shadow mx-auto">
          <div class="el-card__body">
              <h2 class="card-title">Thông tin cá nhân</h2>
              <p class="card-subtitle">Quản lý thông tin cá nhân của bạn.</p>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
                <%= render "users/shared/error_messages", resource: resource %>
                <div class="d-flex justify-content-center mt-2">
                  <div>
                      <div class="btn-change-avatar" id="choose-avatar">
                          <% unless current_user.avatar.attached? %>
                            <%= image_tag "default_account.jpg", {size: '150', class: 'rounded-circle', id: 'edit-avatar'} %>
                          <% else %>
                            <%= image_tag current_user.avatar, {size: '150', class: 'rounded-circle', id: 'edit-avatar'} %>
                          <% end %>
                          <div class="change-avt">Thay đổi</div>
                          <%= f.file_field :avatar, {style: 'display: none;'} %>
                      </div>
                      <script type="text/javascript">
                        var fileupload = document.getElementById("user_avatar");
                        var image = document.getElementById("choose-avatar");
                        image.onclick = function () {
                            fileupload.click();
                        };
                      </script>
                  </div>
                </div>
                <div class="form-group">
                  <%= f.label :email, 'Email', class: 'form-label' %>
                  <%= f.email_field :email, {value: current_user.email, class: 'form-control', style: 'cursor: no-drop;', disabled: true} %>
                </div>
                <div class="form-group">
                  <%= f.label :name, 'Tên hiển thị', class: 'form-label' %>
                  <%= f.text_field :name, autofocus: true, class: 'form-control', value: current_user.name %>
                </div>
                <div class="form-group">
                  <%= f.label :dob, 'Ngày sinh', class: 'form-label' %>
                  <%= f.date_field :dob, class: 'form-control' %>
                </div>
                <div class="form-group">
                    <%= f.radio_button :gender, '0', checked: !current_user.gender %>
                    <%= f.label :gender, 'Nam', {class: 'form-label'} %> <br>
                    <%= f.radio_button :gender, '1', checked: current_user.gender %>
                    <%= f.label :gender, 'Nữ', class: 'form-label' %>
                </div>
                <div class="form-group d-flex justify-content-end">
                    <%= link_to 'Hủy bỏ', root_path, class: 'btn btn-danger' %>
                    <%= f.submit 'Cập nhật', class: 'btn btn-primary ml-3' %>
                </div>
              <% end %>
          </div>
      </div>
  </div>
</div>
